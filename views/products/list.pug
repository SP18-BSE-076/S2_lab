extends ../layout

block content
    .row
        .col-sm-8
            h1=title
        .col-sm-4
            a(href="/products/add" class="btn btn-primary btn-sm float-right") Create Course
    table.table
        thead
            tr
                th Course Name
                th Course ID
                th Course Duration(Hrs) 
                th Course FEE(USD) 
        tbody
            each product in products
                tr
                    td=product.name
                    td=product.id
                    td=product.duration
                    td=product.fee
                    td 
                        a(href="/products/delete/"+product._id,class="btn btn-outline-primary",style="margin-right:8px") Delete
                        a(href="/products/update/"+product._id,class="btn btn-outline-primary",style="margin-right:8px") Edit